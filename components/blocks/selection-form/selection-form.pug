include ../../items/calendar/calendar
include ../../items/button/button
include ../../items/dropdown/dropdown
mixin selection-form(options)
    if !options
        - options = {}
    - var blockName = 'selection-form'
    .selection-form(class= pf.addClasses(blockName , options))
        .selection-form__container
            h1.section-form__title Найдем номера под ваши желания
            +calendar({
                twoInputs: true,
                element: blockName
            })
            h3.selection-form__subtitle гости
            +dropdown({
                vestNumbers: true,
                element: blockName
            })
            +button({
                element: blockName
            })

+selection-form({
    element: 'home'
})