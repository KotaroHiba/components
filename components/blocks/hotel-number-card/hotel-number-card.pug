    - var blockName = 'hotel-number-card'
    div.hotel-number-card
        div(class = blockName + '__slider')
            img(src=path)
        div(class = blockName + '__info')
            - var number = 'â„– ' + options.number
            div(class = blockName + '__number')
                +number-cost({
                    number: options.infoRoom.number,
                    sale: options.infoRoom.sale,
                    lux: options.infoRoom.lux,
                    star: true
                })


