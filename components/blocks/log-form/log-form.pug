include ../../items/button/button
include ../../items/input-text-field/input-text-field
include ../../items/input-gender/input-gender
include ../../items/toggle/toggle

mixin log-form(options)
    - var blockName = 'log-form'
    if !options
        - options = {}

    if options.type === 'register'
       -
           var title = 'Регистрация аккаунта'
    else
        -
            var title  = 'Войти'

    div.log-form
        h1.log-form__title= title
        +input-text-field({
            element: blockName,
            placeholder: 'Имя',
        })
        +input-text-field({
            element: blockName,
            placeholder: 'Фамилия'
        })

        +input-gender({
            element: blockName,
            id: 1,
            gender: 'Мужчина'
        })
        +input-gender({
            element: blockName,
            id: 2,
            gender: 'Женщина'
        })

        h3.log-form__subtitle Дата рождения

        +input-text-field({
            element: blockName,
            placeholder: 'ДД.ММ.ГГГГ',
            type: 'data'
        })

        h3.log-form__subtitle Данные для входа в сервис

        +input-text-field({
            element: blockName,
            placeholder: 'Email',
            type: 'email'
        })
        +input-text-field({
            element: blockName,
            placeholder: 'Пароль',
            type: 'password'
        })

        +toggle({
            element: blockName
        })
        span Получать спецпредложения

        +button({
            element: blockName,
            text: 'Перейти к оплате',
            arrow: true
        })

        span Уже есть аккаунт на Toxin

        +button({
            element: blockName,
            text: 'Войти',
            invert: true

        })


+log-form({
    type: 'register'
})
