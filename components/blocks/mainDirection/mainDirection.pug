include ../../items/blockDirection/blockDirectioninclude ../../items/pageSeparator/pageSeparatormixin mainDirection(options)  if !options    -options = {}  -    var classes = "mainDirection"        classes += options.element ? " " + options.element + "__mainDirection" : ""  section(class= classes)    h2.mainDirection__heading Направления    .mainDirection__container      +blockDirection({          element: "mainDirection",          mod: "main",          main: true,          imgSrc: "img/main.jpg",          heading: "Ашатанга-йога",          timetableTop: "Пн, Ср, Пт – с 11:00 до 14:00",          timetableBottom: "Вт, Чт – с 19:00 до 21:00",          instructor: "Емельянова Полина"      })      +blockDirection({          element: "mainDirection",          mod: "additionalTop",          imgSrc: "img/additional1.jpg",          heading: "Ашатанга-йога",          timetableTop: "Пн, Ср, Пт – с 11:00 до 14:00",          timetableBottom: "Вт, Чт – с 19:00 до 21:00",          instructor: "Емельянова Полина"      })      +blockDirection({          element: "mainDirection",          mod: "additionalBottom",          imgSrc: "img/additional2.jpg",          heading: "Ашатанга-йога",          timetableTop: "Пн, Ср, Пт – с 11:00 до 14:00",          timetableBottom: "Вт, Чт – с 19:00 до 21:00",          instructor: "Емельянова Полина"      })      btn.mainDirection__btnMoreVariant Смотреть больше    +pageSeparator("02", {element: "mainDirection"})