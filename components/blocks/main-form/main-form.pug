include ../../items/dropdown/dropdown
include ../../items/button/button
include ../../items/calendar/calendar

//- Создается форма на главной странице. Вынесенно для удобства в отдельный блок. 
    Нет параметров, т.к. они заданы стандартно. 

mixin main-form()
    .main-form 
        h1 Найдём номера под ваши пожелания
        +calendar({twoInputs: true})
        h3 Гости
        +dropdown({vestNumbers: true})
        +button({
            invert : false, 
            arrow: true, 
            text: 'Подобрать номер', 
            addAnyClass: 'main-form__button'
        })

