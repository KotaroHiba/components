//-                        Options                  |               Classes
    ----------------------------------------------------------------------------------------------
      number - (int) номер команты                  |   element - элементом какого блока является
      lux - (bool = false) приставка к номеру       |   addAnyClass - добавление свободных классов
      sale - (int) цена за комнату в сутки          |   mode - свободный модификатор
      star(bool = false) установка оценки           |
    

include ../../items/rate-button/rate-button
mixin number-cost(options)
    if !options
        - var options = {}
    -
        var number = '№ ' + options.number
        var sale = options.sale + "Р "
    div.number-cost(class=pf.addClasses('number-cost', options))
        div.number-cost__number= number
            if options.lux === true
                span  люкс
        div.number-cost__sale= sale
            span в сутки
        if options.star === true
            hr.number-cost__line
            +rate-button({
                element: 'number-cost'
            })
            div.number-cost__review= '145 '
                span Отзывов


