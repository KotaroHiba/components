//-           Options                    |               Classes    ---------------------------------------------------------------------------------    options.name - name                  | options.element - класс элемента    options.value - value                | options.mode - модификатор блока    options.id - id                      | options.state - модификатор состояния    options.gender - текст в span (пол)  | options.addAnyClass - добавить любой классmixin input-gender(options)    if !options        -options= {info: "You stupid girl(boy-girl(futanary))"}    -        var classes = 'input-gender'        classes += options.element ? ' ' + options.element + '__input-gender' : ''        classes += options.mode ? ' input-gender_' + options.mode : ''        classes += options.state ? ' input-gender_state_' + options.state : ''        classes += options.addAnyClass ? ' ' + options.addAnyClass : ''    div(class=classes)        input(            class="input-gender__radio-button"            type="radio"            name="gender"            id= options.id            value= options.value        )        label.input-gender__signature(for=options.id)            span= options.gender