//-           Options                        |               Classes    ---------------------------------------------------------------------------    options.heading - заголовок              | options.addAnyClass - добавить любой класс    options.items - элементы списка (массив) | options.element - класс элемента                                             | options.mode - модификатор блока                                             | options.state - модификатор состоянияmixin footer-list(options)  if !options    -options= {}    -    var classes = 'footer-list'    classes += options.element ? ' ' + options.element : ''    classes += options.mode ? ' footer-list_' + options.mode : ''    classes += options.state ? ' footer-list_state_' + options.state : ''    classes += options.addAnyClass ? ' ' + options.addAnyClass : ''      div(class=classes)   h3.footer-list__heading= options.heading   ul.footer-list__conteiner     each item in options.items       li.footer-list__item= item+footer-list({items: ["Привет", "Ку", "Ваше здоровье", "Прием булочек окончен"], heading: "Очень клевый заголовок"})