//-           Options              |               Classes
    ---------------------------------------------------------------------------
    state - bool(false)            | element - элементом какого блока является
        нажато ли сердечко.        | addAnyClass - добавление свободных классов
    count - кол-во лайков          | mode - модификатор
                                   |

mixin like-button(options)
    if !options
        - var options = {}
    if !options.count
        - options.count = 3
    -
        var classes = ''
        classes += options.element ? ' ' + options.element + '__like-button': ''
        classes += options.mode ? ' ' + 'like-button_' + options.mode : ''
        classes += options.addAnyClass ? ' ' + options.addAnyClass : ''

    if options.state
        .like-button.like-button-on(class= classes)
            .like-button__like favorite
            .like-button__count= options.count
    else
        .like-button(class= classes)
            .like-button__like favorite_border
            .like-button__count= options.count


