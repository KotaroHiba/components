mixin blockDirection(options)  if !options    -options = {}  -    var classes = "blockDirection"        classes += options.main ? " " + "blockDirection_main" : ""        classes += options.element ? " " + options.element + "__blockDirection" : ""        classes += options.mod ? " " + options.element + "__blockDirection_" + options.mod : ""    var classesArrow = "blockDirection__arrow"        classesArrow += options.main ? " " + "blockDirection__arrow_main" : ""    var classesDescription = "blockDirection__description"        classesDescription += options.main ? " " + "blockDirection__description_main" : ""    var classesImage = "blockDirection__img"        classesImage += options.main ? " " + "blockDirection__img_main" : ""  section(class= classes)    img(class= classesImage src= options.imgSrc alt= options.imgAlt)    div(class= classesDescription)      strong.blockDirection__heading= options.heading      p.blockDirection__timetable        span.blockDirection__timetable-top= options.timetableTop        br        span.blockDirection__timetable-bottom= options.timetableBottom      cite.blockDirection__instructor        span.blockDirection__instructor-word Инструктор        br        span.blockDirection__instructor-name= options.instructor    div(class= classesArrow)