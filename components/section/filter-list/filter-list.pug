include ../../items/input-text-field/input-text-field
include ../../items/range-slider/range-slider
include ../../items/input-checkbox/input-checkbox
include ../../items/calendar/calendar
include ../../items/dropdown/dropdown

mixin filter-list(options)
  - var nameBlock = 'filter-list'

  if !options
    - options = {}
  -
    var classes = ''
      classes += options.element ? ' ' + options.element + '__filter-list' : ''
      classes += options.mode ? ' ' + 'filter-list_' + options.mode : ''
      classes += options.addAnyClass ? ' ' + options.addAnyClass : ''

  div.filter-list(class= classes)
    .filter-list__date-and-guests-number.filter-list__interior-conteiner
        h3.filter-list__heading.filter-list__heading_date Даты пребывания в отеле
        +calendar()

        h3.filter-list__heading.filter-list__heading_guests Гости
        +dropdown({
            element: "filter-list",
            vestNumbers: true
        })

    .filter-list__cost-day.filter-list__interior-conteiner
        +range-slider({
            element: nameBlock
        })
        p.filter-list__sale-interpretation Стоимость за сутки пребывания в номере

    .filter-list__permission-number.filter-list__interior-conteiner
        h3.filter-list__heading.filter-list__heading_checkbox checkbox buttons
        +input-checkbox({
            element: nameBlock,
            checkbox: [
                {info: 'Можно курить'},

                {info: 'Можно с питомцами'},

                {info: "Можно пригласить гостей <br> (до 10 человек)"},
            ],
        })

    .filter-list__features-number.filter-list__interior-conteiner
        h3.filter-list__heading.filter-list__heading_features Доступность
        +input-checkbox({
            element: nameBlock,
            checkbox: [
                {info : 'Широкий коридор',
                 description: 'Ширина коридоров в номере <br> не менее 91 см'},

                {info : 'Помощник для инвалидов',
                 description: 'На 1 этаже вас встретит специалист <br> и проводит до номера'},
            ],
        })

    .filter-list__facilities.filter-list__interior-conteiner
        h3.filter-list__heading.filter-list__heading_facilities Удобства номера
        +dropdown({
            element: "filter-list",
            vestNumbers: false
        })

    .filter-list__more-facilities.filter-list__interior-conteiner
        details.bullet-list.filter-list__bullet-list
          summary.bullet-list__heading Дополнительные удобства
          +input-checkbox({
              element: "bullet-list",
              checkbox: [
                  {info: 'Завтрак'},

                  {info: 'Письменный стол'},

                  {info: "Стул для кормления"},

                  {info: 'Кроватка'},

                  {info: 'Телевизор'},

                  {info: 'Шампунь'},

                  {info: 'Телевизор'},

                  {info: 'Шампунь'},
              ],
          })