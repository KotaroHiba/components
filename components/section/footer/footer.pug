include ../../../components/items/socialIcons/socialIconsinclude ../../../components/items/inputRecord/inputRecordmixin footer(options)  if !options    -options = {}  -    var classes = "footer"        classes += options.element ? " " + options.element + "__footer" : ""  footer(class= classes)    section.footer__info      p.footer__info-address Адрес: <br>        | Московский проспект, 22      p.footer__info-telephoneNumber Телефон: <br>        | 8 (812) 690-10-10      p.footer__info-workTime График работы: <br>        | Пн-Вс с 11:00 до 21:00      p.footer__info-email Email: <br>        | yogaspb@gmail.com      +socialIcons({element: "footer"})    section.footer__freeLessonRecord      h2.footer__heading Запишитесь на бесплатное пробное занятие      +inputRecord({          element: "footer",          type: "email",          text: "Ваше имя"      })      +inputRecord({          element: "footer",          type: "number",          text: "Ваш телефон"      })      btn.footer__btnGiveRequisition Оставить заявку    .footer__urlANDcopyright      p.footer__urlANDcopyright-url Yogaspb.com      p.footer__urlANDcopyright-copyright © 2018   Все права защищены